@{
    ViewData["Title"] = "PathWay";
}
<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">PathWay List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary text-white" asp-controller="PathWay" asp-action="Upsert">
                <i class="fas fa-plus"></i> &nbsp;
                Create New PathWay
            </a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:#ffffff" class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <th>University</th>
                    <th>PathWay</th>
                    <th>Distance</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/pathway.js"></script>
}